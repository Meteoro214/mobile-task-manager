<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskListFragment"
        android:name="gal.uvigo.mobileTaskManager.fragments.TaskListFragment"
        android:label="fragment_task_list"
        tools:layout="@layout/fragment_task_list" >
        <action
            android:id="@+id/checkTaskDetails"
            app:destination="@id/taskDetailFragment" />
        <action
            android:id="@+id/addTask"
            app:destination="@id/taskFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="gal.uvigo.mobileTaskManager.fragments.TaskDetailFragment"
        android:label="fragment_task_detail"
        tools:layout="@layout/fragment_task_detail" >
        <action
            android:id="@+id/returnToList"
            app:destination="@id/taskListFragment" />
        <argument
            android:name="task"
            app:argType="gal.uvigo.mobileTaskManager.model.Task" />
    </fragment>
    <fragment
        android:id="@+id/taskFormFragment"
        android:name="gal.uvigo.mobileTaskManager.fragments.TaskFormFragment"
        android:label="fragment_task_form"
        tools:layout="@layout/fragment_task_form" >
        <action
            android:id="@+id/abandonAddForm"
            app:destination="@id/taskListFragment" />
    </fragment>
</navigation>