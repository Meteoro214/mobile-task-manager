<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskListFragment"
        android:name="gal.uvigo.mobileTaskManager.ui.tasklist.TaskListFragment"
        android:label="@string/app_title"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/checkTaskDetails"
            app:destination="@id/taskDetailFragment" />
        <action
            android:id="@+id/openForm"
            app:destination="@id/taskFormFragment" />
    </fragment>
    <dialog
        android:id="@+id/taskDetailFragment"
        android:name="gal.uvigo.mobileTaskManager.ui.TaskDetailFragment"
        android:label="@string/detail_title"
        tools:layout="@layout/fragment_task_detail">
        <action
            android:id="@+id/openForm"
            app:destination="@id/taskFormFragment"
            app:popUpTo="@id/taskDetailFragment"
            app:popUpToInclusive="true" />
        <!--popUpTo allows the BottomSheet to be dismissed-->
        <argument
            android:name="taskID"
            android:defaultValue="-1L"
            app:argType="long" />
    </dialog>
    <dialog
        android:id="@+id/taskFormFragment"
        android:name="gal.uvigo.mobileTaskManager.ui.TaskFormFragment"
        android:label="@string/form_title"
        tools:layout="@layout/fragment_task_form">
        <action
            android:id="@+id/returnToView"
            app:destination="@id/taskDetailFragment"
            app:popUpTo="@id/taskFormFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="taskID"
            android:defaultValue="-1L"
            app:argType="long" />
    </dialog>
</navigation>