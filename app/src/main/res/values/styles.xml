<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MobileTaskManager.TitleSmallEmphasized" parent="TextAppearance.Material3.TitleSmall.Emphasized">
        <item name="android:textSize">@dimen/item_header_categoryTV_textSize</item>
    </style>

    <style name="Theme.MobileTaskManager.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/bottom_sheet_frags_title_textSize</item>
    </style>

    <style name="Theme.MobileTaskManager.HeadlineSmallEmphasized" parent="TextAppearance.Material3.HeadlineSmall.Emphasized">
        <item name="android:textSize">@dimen/app_title_textSize</item>
    </style>

    <style name="Theme.MobileTaskManager.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">@dimen/item_task_titleTV_textSize</item>
        <item name="fontFamily">sans-serif</item>

    </style>

    <style name="Theme.MobileTaskManager.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Theme.MobileTaskManager.HeaderTV">
        <item name="android:gravity">bottom</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleSmallEmphasized
        </item>
    </style>

    <style name="Theme.MobileTaskManager.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/frag_task_list_addFAB_margin</item>
    </style>

    <style name="Theme.MobileTaskManager.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior
        </item>
    </style>

    <style name="Theme.MobileTaskManager.AppBar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="titleCentered">true</item>
    </style>


</resources>