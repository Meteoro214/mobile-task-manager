<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.TaskDetailFragment">

    <data>

        <import type="gal.uvigo.mobileTaskManager.model.ExtensionsKt" />

        <variable
            name="taskData"
            type="gal.uvigo.mobileTaskManager.model.Task" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/idTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/task_id"
            app:layout_constraintBottom_toBottomOf="@+id/isDoneMark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/idTV2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@{Integer.toString(taskData.id)}"
            app:layout_constraintBottom_toBottomOf="@+id/idTV"
            app:layout_constraintStart_toEndOf="@id/idTV"
            app:layout_constraintTop_toTopOf="@id/idTV" />

        <TextView
            android:id="@+id/isDoneTV"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/check_task_isItDone"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/isDoneMark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/idTV2"
            app:layout_constraintTop_toTopOf="@+id/isDoneMark" />

        <TextView
            android:id="@+id/isDoneMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="@{taskData.done ? @string/mark_done_DONE_img: @string/mark_done_UNDONE_img}"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/idTV"
            app:layout_constraintStart_toEndOf="@id/isDoneTV"
            app:layout_constraintTop_toTopOf="@id/idTV" />

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_task_title_msg"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idTV"
            app:layout_constraintVertical_bias="0.10" />

        <TextView
            android:id="@+id/titleTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{taskData.title}"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTV" />

        <TextView
            android:id="@+id/categoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_task_category_msg"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@id/descriptionTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleTV2" />

        <TextView
            android:id="@+id/categoryTV2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@{taskData.category.toString()}"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/categoryTV"
            app:layout_constraintStart_toEndOf="@id/categoryTV"
            app:layout_constraintTop_toTopOf="@+id/categoryTV" />

        <TextView
            android:id="@+id/dueDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_task_dueDate_msg"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/descriptionTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/categoryTV2"
            app:layout_constraintTop_toTopOf="@id/titleTV2" />

        <TextView
            android:id="@+id/dueDateTV2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@{ExtensionsKt.formattedDueDate(taskData.dueDate)}"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/dueDateTV"
            app:layout_constraintStart_toEndOf="@+id/dueDateTV"
            app:layout_constraintTop_toTopOf="@id/dueDateTV" />

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_task_description_msg"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/descriptionTV2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/descriptionTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{taskData.description}"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryTV" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_button_msg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionTV2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

