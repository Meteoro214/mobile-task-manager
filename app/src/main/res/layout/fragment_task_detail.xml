<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TaskDetailFragment">

    <data>
        <import type="gal.uvigo.mobileTaskManager.model.ExtensionsKt" />
        <variable
            name="taskData"
            type="gal.uvigo.mobileTaskManager.model.Task" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/idTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/check_task_ID"
            app:layout_constraintBottom_toBottomOf="@+id/isDoneMark"
            app:layout_constraintEnd_toStartOf="@+id/isDoneTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/isDoneTV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/check_task_isItDone"
            app:layout_constraintBottom_toBottomOf="@+id/isDoneMark"
            app:layout_constraintEnd_toStartOf="@+id/isDoneMark"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/idTV"
            app:layout_constraintTop_toTopOf="@+id/isDoneMark" />

        <TextView
            android:id="@+id/isDoneMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="@{taskData.done ? @string/mark_done_DONE_img: @string/mark_done_UNDONE_img}"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/idTV"
            app:layout_constraintBottom_toBottomOf="@id/idTV"
            app:layout_constraintStart_toEndOf="@+id/isDoneTV"
             />

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_task_title"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/categoryTV"
            app:layout_constraintTop_toBottomOf="@+id/idTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/categoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_task_category"
            android:textColor="@color/gray"
            android:textSize="11sp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/descriptionTV"
            app:layout_constraintEnd_toStartOf="@+id/dueDateTV"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dueDateTV"
            app:layout_constraintTop_toBottomOf="@+id/titleTV" />

        <TextView
            android:id="@+id/dueDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_task_date"
            app:layout_constraintEnd_toStartOf="@+id/categoryTV"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@id/categoryTV"
            app:layout_constraintBottom_toBottomOf="@id/categoryTV"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
             />

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_task_description"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="111dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

