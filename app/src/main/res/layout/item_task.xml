<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="taskData"
            type="gal.uvigo.mobileTaskManager.model.Task" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/item_task_cardview_marginVertical"
        android:elevation="@dimen/item_task_cardview_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/item_task_layout_marginVertical"
            tools:context=".ui.MainActivity">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/idTV"
                android:layout_width="@dimen/item_task_idTV_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_task_general_marginStart"
                android:gravity="center_vertical"
                android:text="@{Long.toString(taskData.id)}"
                app:layout_constraintBottom_toBottomOf="@id/isDoneMark"
                app:layout_constraintEnd_toStartOf="@id/isDoneMark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/isDoneMark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/isDoneMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/item_task_isDoneMark_marginHorizontal"
                android:gravity="center"
                android:paddingBottom="@dimen/item_task_isDoneMark_paddingBottom"
                android:text="@{taskData.done ? @string/mark_done_DONE_img: @string/mark_done_UNDONE_img}"
                android:textSize="@dimen/item_task_isDoneMark_textSize"
                app:layout_constraintBottom_toBottomOf="@id/idTV"
                app:layout_constraintStart_toEndOf="@id/idTV"
                app:layout_constraintTop_toTopOf="@id/idTV" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_task_general_marginStart"
                android:text="@{taskData.title}"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                app:layout_constraintBottom_toTopOf="@id/categoryTV"
                app:layout_constraintEnd_toStartOf="@+id/dueDateTV"
                app:layout_constraintStart_toEndOf="@+id/isDoneMark"
                app:layout_constraintTop_toTopOf="@id/isDoneMark" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/categoryTV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/item_task_general_marginStart"
                android:gravity="bottom"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                app:category="@{taskData.category}"
                app:layout_constraintStart_toEndOf="@+id/isDoneMark"
                app:layout_constraintTop_toBottomOf="@id/titleTV" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dueDateTV"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/item_task_dueDateTV_marginEnd"
                app:dueDate="@{taskData.dueDate}"
                app:expected_date="@{taskData}"
                app:layout_constraintBottom_toBottomOf="@id/isDoneMark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/isDoneMark" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>